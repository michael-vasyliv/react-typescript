{
    "preset": "ts-jest",
    "coverageDirectory": "<rootDir>/coverage",
    "coverageProvider": "v8",
    "coverageReporters": ["lcov"],
    "roots": ["<rootDir>/tests/"],
    "moduleNameMapper": {
        "@components/(.*)": "<rootDir>/src/components/$1",
        "\\.(css|less|svg|scss)$": "<rootDir>/tests/__mocks__/style.ts"
    },
    "transform": {
        "^.+\\\\.(ts|tsx)$": "ts-jest"
    },
    "setupFilesAfterEnv": [
        "<rootDir>/tests/config.ts"
    ],
    "testEnvironment": "jsdom"
}
